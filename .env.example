# TaskForge Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
TASKFORGE_ENVIRONMENT=development

# Secret key for JWT tokens and session management
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TASKFORGE_SECRET_KEY=your-super-secret-key-here

# API Configuration
TASKFORGE_HOST=0.0.0.0
TASKFORGE_PORT=8000
TASKFORGE_WORKERS=4

# Debug mode (disable in production)
TASKFORGE_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database URL
# Examples:
# PostgreSQL: postgresql://user:pass@localhost:5432/taskforge
# SQLite: sqlite:///./taskforge.db
DATABASE_URL=sqlite:///./data/taskforge.db

# Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds
CACHE_DEFAULT_TTL=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Token settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Password hashing
PASSWORD_HASH_ROUNDS=12

# CORS settings
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend (smtp, sendgrid, mailgun, console)
EMAIL_BACKEND=console

# SMTP Configuration (if using SMTP backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM_ADDRESS=noreply@taskforge.com

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Sentry Configuration (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# FILE STORAGE
# =============================================================================

# Storage backend (local, s3, gcs)
STORAGE_BACKEND=local

# Local storage path
STORAGE_PATH=./data/uploads

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=taskforge-uploads

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Default rate limits (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=20
RATE_LIMIT_UPLOAD=10

# =============================================================================
# TASK PROCESSING
# =============================================================================

# Background task queue (redis, memory)
TASK_QUEUE_BACKEND=memory

# Celery Configuration (if using Redis/RabbitMQ)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Automatic database migrations
AUTO_MIGRATE=true

# Enable API documentation
ENABLE_DOCS=true

# Enable test routes
ENABLE_TEST_ROUTES=false

# Seed database with sample data
SEED_DATABASE=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Force HTTPS
FORCE_HTTPS=false

# Session security
SECURE_COOKIES=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_REAL_TIME_UPDATES=false
ENABLE_AI_SUGGESTIONS=false
ENABLE_PLUGIN_MARKETPLACE=false
ENABLE_MOBILE_APP=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Error tracking
BUGSNAG_API_KEY=your-bugsnag-api-key

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key